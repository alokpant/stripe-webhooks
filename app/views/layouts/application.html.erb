<!DOCTYPE html>
<html>
  <head>
    <title>Stripe webhooks</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if signed_in? %>
      <%= link_to 'Subscriptions', subscriptions_path, data: { turbo: 'false' } %>
      <%= button_to 'Billing Portal', billing_portal_path, data: { turbo: 'false' } %>
      <%= button_to 'Edit profile', edit_user_registration_path, data: { turbo: 'false' } %>
      <%= button_to 'Sign out', destroy_user_session_path, method: :delete, data: { turbo: 'false' } %>
    <% else %>
      <%= link_to 'Sign up', new_user_registration_path, data: { turbo: 'false' } %>
      <%= link_to 'Sign in', new_user_session_path, data: { turbo: 'false' } %>
    <% end %>
    <%= yield %>
  </body>
</html>
